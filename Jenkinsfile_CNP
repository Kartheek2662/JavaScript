#!groovy
properties([
        [$class: 'GithubProjectProperty', projectUrlStr: 'https://github.com/hmcts/div-ccd-e2e-tests.git'],
        parameters([
                string(name: 'CCD_E2E_EMAIL', defaultValue: 'michael.osinloye@hmcts.net', description: 'Solicitor Email'),
                string(name: 'CCD_E2E_PASSWORD', defaultValue: '', description: 'Solicitor Password'),
                string(name: 'CCD_CASEWORKER_E2E_EMAIL', defaultValue: 'robreallywantsccdaccess@mailinator.com', description: 'Caseworker Email'),
                string(name: 'CCD_CASEWORKER_E2E_PASSWORD', defaultValue: '', description: 'Caseworker Password'),
                string(name: 'IDAM_CLIENT_SECRET', defaultValue: '', description: 'IDAM Divorce Secret'),
                string(name: 'SERVICE_SECRET', defaultValue: '', description: 'IDAM Divorce Frontend Service Secret')
        ])
])

@Library("Infrastructure")

def product = "div-ccd"
def component = "e2e"

node {
    ws('workspace/div-ccd-e2e-tests') {
        stage('Checkout') {
            deleteDir()
            checkout scm
        }

        stage('Journey Tests') {
            try {
                sh 'yarn install'
                sh 'yarn test'
            }
            catch (Exception err) {
                currentBuild.result = 'UNSTABLE'
                echo "RESULT: ${currentBuild.result}"
            } finally {
                archiveArtifacts 'functional-output/*'
            }

        }

        stage('After run') {
            echo "finished"
        }

    }
    deleteDir()
}
